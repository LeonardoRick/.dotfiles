#!/usr/bin/env zsh
##############################################################
# Background functions (zsh only)
##############################################################
function setup_iterm(){
  setopt PROMPT_SUBST
  PROMPT='%B%F{40}%n@%m%F{248}: %F{31}${(%):-%~}%f %b%F{248}$%f '
  autoload -Uz compinit && compinit # autocomplete
}